body
  //- facebook chat
  #fb-root
  #fb-customer-chat.fb-customerchat
  //- end facebook chat
  //- modal
  link(rel="stylesheet", href="/css/shop/modal.css")
  #Modal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalLabel', aria-hidden='true')
    .modal-dialog(role='document')
        .modal-content
            .modal-header
                h5#ModalLabel.modal-title Modal title
                button.close(type='button', data-dismiss='modal', aria-label='Close')
                    span(aria-hidden='true') &times;
            #modalMsg.modal-body
            .modal-footer
                button.btn.btn-danger(type='button', data-dismiss='modal') Đóng
  
  //- modal
  //- header
  .header
    .header--top
      .container.header--top--inner
        if(user)
          a.header--top--item(href='/logout')
            
            span.icon-text Đăng xuất
        else
          a.header--top--item(href='/login')
           
            span.icon-text Đăng nhập
    .header--bottom
      .container.header--bottom--inner
        .row
          .bottom--inner--left.col-2
            a.brand(href='/')
              img.img(height='80px', src='https://upanh.cf/er047intj9.gif', alt='')
              span KTQ
          .bottom--inner--center.col-8.col-lg-4
            input.form-control(id='search_input', type='text', placeholder='Tìm gì ghi vô')
            span.search_btn#search_btn
              i.fas.fa-search
          .phone-menu-container.col-2
            i.fas.fa-align-justify#phone-menu
          .col-12.col-lg-6#phone-menu-data
            .bottom--inner--right
              a.inner--right--item(href='https://www.facebook.com/KTQ-shop-223488363019229')
                i.fas.fa-tag.icon
                .icon-text Liên hệ
              a.inner--right--item(href='/account/Order')
                i.far.fa-clipboard.icon
                .icon-text &Dstrok;&#x1A1;n h&agrave;ng
              //- a.inner--right--item(href='#')
              //-   i.far.fa-bell.icon
              //-   .icon-text Thông báo
              a.inner--right--item(href='/account')
                i.fas.fa-user-circle.icon
                .icon-text Tài khoản
              a.inner--right--item(href='/cart')
                i.fas.fa-shopping-cart.icon
                .icon-text Gi&#x1ECF; h&agrave;ng      
            
  //-end header
  //- content
  block content
  //- end content
  //- footer
  .container-fluid.bg-newletter.wow.fadeInUp
    .container.newletter
      .row
        .col-xl-7.col-lg-6.col-md-6.col-sm-12.newletter-title
          i.fa.fa-sign-in
          span Đăng kí nhận thông tin
        .col-xl-5.col-lg-6.col-md-6.col-sm-12.newletter-content
          input(type='email', placeholder='Your email address')
          button Xác Nhận
  .container.footer.wow.fadeInUp
    .row
      .col-xl-3.col-lg-3.col-md-12.col-sm-12.col-xs-12.footer-column.about-ft
        .ttfooter-logo
          a(href='/')
            img(src='https://upanh.cf/er047intj9.gif' height='50px', alt='footer-logo')
        .ttfooter-desc Claritas processus Lorem ipsum dynamicus recmicus sequit qituconsut.
      .col-xl-3.col-lg-3.col-md-4.col-sm-3.col-xs-6.footer-column.footer-extras
        h5.list-title Ưu đãi
        ul.list-unstyled
          li
            a(href='#') Trung tâm bảo hành
          li
            a(href='#') Thanh toán online
          li
            a(href='#') DỊch vụ sữa chữa
          li
            a(href='#') Hướng dẫn đặt hàng

      .col-sm-3.col-lg-3.col-md-4.col-sm-4.col-xs-6.footer-column.footer-my-account
        h5.list-title Thông tin
        ul.list-unstyled
          li
            a(href='/account') Tài khoản
          li
            a(href='/account/order') lịch sử đơn

      .col-xl-3.col-lg-3.col-md-4.col-sm-5.col-xs-6.footer-column.footer-store-info
        h5.list-title Thông tin chúng tôi
        ul.list-unstyled
          li.contact-detail
            .data.address
              i.fa.fa-map-marker
              .contact-address
                | KTQ
                br
                | Việt Nam
          li.contact
            .data.contact
              i.fa.fa-phone
              span.phone
