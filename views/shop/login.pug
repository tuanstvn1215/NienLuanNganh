extends ../layouts/header_footer.pug
block content

  link(rel="stylesheet", href="/css/shop/Sign-in_up.css")
  .signIU-body
    #signIU-container(class=login?'signIU-container':'signIU-container right-panel-active')
      .form-container-signIU.sign-up-container
        form(action="/login/register", method="post" )#signUp-form.signIU-form
          .signIU-title Đăng Kí
          .social-container
            .social-inner
              a.social(href='#')
                i.fab.fa-facebook-f
            .social-inner
              a.social(href='#')
                i.fab.fa-google-plus-g
          .signIU-subtitle or use your email for registration
          input(type='text', placeholder='Username' name='username')
          input(type='password', placeholder='Password' name='password')
          input(type='password', placeholder='Password' name='rppassword')
          button(type="submit").signIU-button Đăng Kí
      .form-container-signIU.sign-in-container
        form(action="/login", method="post" )#signIn-form.signIU-form
          .signIU-title Đăng Nhập
          .social-container
            .social-inner
              a.social(href='#')
                i.fab.fa-facebook-f
            .social-inner
              a.social(href='#')
                i.fab.fa-google-plus-g
          .signIU-subtitle or use your account
          input(type='text', name='username', placeholder='Username')
          input(type='password', name='password', placeholder='Password')
          .signIU--forgotpass
            a(href='#') Forgot your password?
          button(type="submit").signIU-button Đăng Nhập
      .overlay-container
        .overlay
          .overlay-panel.overlay-left
            h1 Welcome Back!
            .signIU-subslogan To keep connected with us please login with your personal info
            #signIn.signIU-button.ghost Sign In
          .overlay-panel.overlay-right
            h1 Hello, Friend!
            .signIU-subslogan Enter your personal details and start journey with us
            #signUp.signIU-button.ghost Sign Up
  script(src="/js/shop/Sign-in_up.js" type='module') 